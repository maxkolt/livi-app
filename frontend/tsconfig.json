{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-native",
    "types": ["react", "react-native", "node"],
    "typeRoots": ["./node_modules/@types", "./"],
    "baseUrl": ".",
    "paths": {
      "@cometchat/chat-uikit-react-native": ["./src/types/cometchat-stub"],
      "@cometchat/chat-uikit-react-native/*": ["./src/types/cometchat-stub"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "**/*.old.tsx"
  ],
  "include": [
    "src",
    "components",
    "utils",
    "App.tsx",
    "global.d.ts"
  ]
}
